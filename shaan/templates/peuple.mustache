
<div class="item col-sm-12 col-lg-6 mb-2">
  <div class="card {{dom_color}}">
    <div class="card-header {{dom_type}}">
      <h2 class="text-center mb-0 me-3">
        <span class="title">{{Nom}}</span>
        {{#Surnom}}
          <span class="surnom">{{Surnom}}</span>
        {{/Surnom}}
      </h2>
    </div>
    {{#Domaines}}
      {{> cercle}}
    {{/Domaines}}
    <div class="card-body">
      <img class="float-end p-1" style="max-width:50%" src="{{Image}}">
      <div class="float-end text-right">
        <span class="source">{{Source}}</span>
      </div>
      {{#Domaine}}
        <p class="p-orig">
          Domaine de prédilection :
          <span class="uppercase">{{Domaine}}</span>
        </p>
      {{/Domaine}}
      <ul class="h3">
        {{#Population}}
          <li>
            <strong>Population :</strong>
            <span>
              {{Population}}
              {{#Lignées}}({{Lignées}}){{/Lignées}}
            </span>
          </li>
        {{/Population}}
        {{#Localisation}}
          <li>
            <strong>Localisation :</strong>
            <span>{{Localisation}}</span>
          </li>
        {{/Localisation}}
        {{#Région}}
          <li>
            <strong>Région :</strong>
            <span>{{Région}}</span>
          </li>
        {{/Région}}
        {{#Régions héossiennes}}
          <li>
            <strong>Régions héossiennes :</strong>
            <span>{{Régions héossiennes}}</span>
          </li>
        {{/Régions héossiennes}}
        {{#Élément totem}}
          <li>
            <strong>Élément totem :</strong>
            <span>{{Élément totem}}</span>
          </li>
        {{/Élément totem}}
        {{#Amis}}
          <li>
            <strong>Amis :</strong>
            <span>{{Amis}}</span>
          </li>
        {{/Amis}}
        {{#Méfiance}}
          <li>
            <strong>Méfiance :</strong>
            <span>{{Méfiance}}</span>
          </li>
        {{/Méfiance}}
      </ul>
      {{#Description}}
        <div class="vert" id="p_desc">
          {{Description}}
        </div>
      {{/Description}}
    </div>
    <div class="card-footer">
    </div>
  </div>
</div>
